<% include ../partials/header2 %>
<div class="row">
    <h2>To contact us about any queries fill in the form below</h2>
     <div class="row"><br>
  <div class="grid-container">
      <form  method="post" action="/contact">
          <div class="item">
            <label for="name">Your name:</label>
             <input name="name" id="name" type="text" placeholder="Please enter your user name" required />
    
             <label for="email">Your email:</label>
             <input name="email" id="email" type="text" placeholder="Please enter your email address"  required/>
            
             <label for="enquiry">Message:</label><br>
             <textarea id="enquiry" name="enquiry" rows="6" cols="35"></textarea><br>
    
             <button type="submit" class="button">Submit</button>
                         
                    </div>
                </form>
        </div>
  
</div>
