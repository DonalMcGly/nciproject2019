<% include ../partials/header %>
<div class="row">
    <h1>Edit a Product</h1>
     <div class="row"><br>
  <div class="grid-container">
      <% res1.forEach(function(product) { %>
         <form accept-charset="UTF-8" action="/editsql/ <%= product.id %>" method="post">
             <div class="item">
                 <label for="title">Title:</label>
                 <input name="title" type="text" value="<%= product.title %>"  required/>
                 
                 <label for="brand">Console:</label><br>
                <b><input type="radio" name="brand" value="Xbox One" checked> Xbox One</b><br>
                <b><input type="radio" name="brand" value="Playstation 4"> Playstation 4</b><br>
                <b><input type="radio" name="brand" value="Nintendo Switch"> Nintendo Switch</b><br>
                <b><input type="radio" name="brand" value="Retro"> Retro</b><br>
                <br>
                 
                <label for="genre">Genre:</label>
                <input name="genre" type="text" value="<%= product.genre %>"  required/>
                 
                <label for="description">Description:</label>
                <input name="description" type="text" value="<%= product.description %>"  required/>
                 
                <label for="quality">Quality:</label>
                <select name = "quality">
                <option value = "new" selected>New</option>
                <option value = "used">Used</option>
                </select>
                 
                <label for="price">Price:</label>
                <input name="price" type="text" value="<%= product.price %>" pattern="\d+(\.\d{2})?" title="Enter price in format 0.00 " required/>

                <button class="button">Edit item</button>
         </div>
         </form>   
    </div>
  <% }); %>
</div>
<% include ../partials/footer %>
</body>
</html>
